<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/recipe_card_view_bg_color"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/recipe_card_view_bg_color"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginStart="5dp"
            app:boxBackgroundColor="@color/recipe_card_view_bg_color"
            android:id="@+id/textInputLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:endIconMode="clear_text"
            app:endIconTint="@color/text_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/personalRecipeIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textMultiLine"
                android:hint="Enter Ingredient"
                android:textColor="@color/text_color"
                tools:ignore="HardcodedText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_marginHorizontal="5dp"
            app:elevation="0dp"
            android:src="@drawable/delete"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/recipe_card_view_bg_color"
            android:id="@+id/ingredientsDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="Delete Ingredient"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</androidx.cardview.widget.CardView>