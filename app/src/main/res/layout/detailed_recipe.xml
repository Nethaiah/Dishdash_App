<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    android:id="@+id/detailedRecipeCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailedRecipeHeader"
            android:padding="10dp"
            android:max="100"
            android:progress="0"
            android:background="@android:color/transparent"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:textColor="@color/text_color"
            android:id="@+id/detailedRecipeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:letterSpacing="0.1"
            android:text="Detailed recipe is loading..."
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/main_detailed_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recipe_card_view_bg_color"
            android:orientation="vertical">


            <FrameLayout
                android:background="@color/recipe_card_view_bg_color"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/detailedRecipeImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Detailed recipe image"
                    android:scaleType="centerCrop"
                    tools:ignore="HardcodedText"
                    tools:srcCompat="@tools:sample/avatars" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:backgroundTint="@color/recipe_card_view_bg_color"
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="8dp"
                    android:contentDescription="Back Button"
                    app:srcCompat="@drawable/previous"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/detailedRecipeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="0.1"
                    android:text="TextView"
                    android:textSize="26sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/text_color"
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:letterSpacing="0.1"
                        android:text="Ready in: "
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:textColor="@color/text_color"
                        android:id="@+id/detailedRecipeReadyIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.1"
                        android:text="TextView"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/text_color"
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:letterSpacing="0.1"
                        android:text="Serving: "
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:textColor="@color/text_color"
                        android:id="@+id/detailedRecipeServing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.1"
                        android:text="TextView"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/ingredientsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="0.1"
                    android:text="Ingredients:"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:letterSpacing="0.1"
                    android:text="Ingredients:"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/instructionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="0.1"
                    android:text="Instructions:"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/instructionContainerRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/nutritionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="0.1"
                    android:text="Nutrition's:"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/detailedRecipeNutritionImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="30dp"
                    android:contentDescription="Recipe Nutrition Image"
                    tools:srcCompat="@tools:sample/avatars"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <Button
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:backgroundTint="@color/main_button_bg_color"
                        android:id="@+id/detailedRecipeAddToFav"
                        app:icon="@drawable/remove_from_favorite"
                        android:layout_weight="1"
                        android:paddingVertical="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:letterSpacing="0.1"
                        android:text="Add To Favorites"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>