<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardLinkContainer"
        android:layout_width="wrap_content"
        android:background="@color/bg_color"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/text_color"
            android:id="@+id/recipeCardLinkHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Your Recipe Card is Ready!"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:layout_marginTop="5dp"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="68dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:indeterminate="true"
            android:max="100"
            android:padding="10dp"
            android:progress="0"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeCardLink" />

        <TextView
            android:textColor="#1E90FF"
            android:gravity="center_horizontal"
            android:id="@+id/recipeCardLink"
            android:autoLink="web"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeCardLinkHeader"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>